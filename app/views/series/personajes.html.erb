<div class="container">
  <div class="row mt-5">
    <div class="col-lg-6">
      <h4>Informaci√≥n del personaje</h4>
      <figure width="100"
                    height="100">
              <%=image_tag(@personaje['img'], :size => "260x180") %>

            </figure>
        <%= 'Nombre: '%><%=@personaje['name']%>
        <br>
        <%= 'Ocupacion:'%>
        <br>
        <% @personaje['occupation'].each do |f| %>
                <%= f%>
                <br>
            <% end %>
        <br>
        <%= 'Estado: '%><%= @personaje['status']%>
        <br>
        <%= 'Nickname: '%><%= @personaje['nickname']%>
        <br>
        <%= 'Temporadas que aparece en Breaking Bad:'%>
        <br>
        <% @personaje['appearance'].each do |f| %>
                <%= link_to f, episodes_path(serie: "Breaking Bad", season: f) %>
                <br>
            <% end %>
        <%# if !@personaje['better_call_saul'].respond_to?(:to_s) && !@personaje['better_call_saul'].empty?%>
        <%= 'Temporadas que aparece en Better Call Saul:'%>
        <br>
        <% @personaje['better_call_saul_appearance'].each do |f| %>
                <%= link_to f, episodes_path(serie: "Better Call Saul", season: f) %>
                <br>
            <% end %>
        <%# end %>
        <%= 'Interpretado por: '%><%=@personaje['portrayed']%>
        <br>
        <%= 'Citas:'%>
        <br>
        <% @citas.each do |f| %>
                <%= f['quote'] %>
                <br>
            <% end %>
    </div>

  </div>
</div>